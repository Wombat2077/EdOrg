<Window x:Class="EdOrg.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EdOrg"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Border CornerRadius="10" BorderBrush="Blue" BorderThickness="2" VerticalAlignment="Center" Width="200" Padding="10">
        <StackPanel VerticalAlignment="Center" > 
            <Image Source="Resources/Pepe.png" Height="75"/>
            <StackPanel>
                <Label>Логин</Label>
                <TextBox x:Name="bxLogin"></TextBox>
            </StackPanel>
            <StackPanel>
                <Label>Пароль</Label>
                <PasswordBox x:Name="bxPassword"></PasswordBox>
            </StackPanel>
            <Button Height="25" Width="100" Click ="LoginHandler" Background="DarkBlue" Foreground="WhiteSmoke" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="5">Войти</Button>
        </StackPanel>
    </Border>
</Window>
